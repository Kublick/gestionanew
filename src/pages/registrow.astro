									id="mask0_2009_4428"
									style="mask-type:luminance"
									maskUnits="userSpaceOnUse"
									x="0"
									y="0"
									width="45"
									height="38"
								>
									<path d="M0.5625 0.302124H44.3333V37.2396H0.5625V0.302124Z" fill="white"></path>
