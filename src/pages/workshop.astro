<script is:inline>
	const mexicoUrl = 'https://buy.stripe.com/cNiaEXeHbblX01z1Bbe7m0y'
	const internationalUrl = 'https://buy.stripe.com/bJebJ1dD775HdSp2Ffe7m0x'

	async function detectCountry() {
		try {
			const params = new URLSearchParams(location.search)
			const override = params.get('country') || localStorage.getItem('debugCountry')
			if (override) return String(override).toUpperCase()
		} catch (e) {
			/* ignore in SSR */
		}

		try {
			const res = await fetch('https://ipapi.co/json/')
			if (res.ok) {
				const json = await res.json()

				if (json && json.country) return String(json.country).toUpperCase()
			}
		} catch (err) {
			/* fallback */
		}

		const lang = navigator.language || navigator.userLanguage || ''
		if (lang.toLowerCase().includes('mx')) return 'MX'
		return 'INTL'
	}

	document.addEventListener('DOMContentLoaded', () => {
		document.querySelectorAll('.purchase-btn').forEach((btn) => {
			btn.addEventListener('click', async (e) => {
				e.preventDefault()
				if (btn.disabled) return
				btn.disabled = true

				const country = await detectCountry()
				const target = country === 'MX' ? mexicoUrl : internationalUrl

				// optional: small delay to show disabled state
				window.location.href = target
			})
		})
	})
</script>
