	<div class="mt-24">
		<Image src={Logo} alt="logo" height={Logo.height} width={Logo.width} class="tex mx-auto" />
		<svg
			xmlns="http://www.w3.org/2000/svg"
			width="249"
			height="4"
			viewBox="0 0 249 4"
			fill="none"
			class="mx-auto my-9"
		>
			<path d="M0 2H249" stroke="#6D8C82" stroke-width="3"></path>
		</svg>
	</div>
	<div class="flex justify-center gap-12">
		<a href="https://www.facebook.com/draberenicebastida">
			<Image src={FB} alt="logo" height={FB.height} width={FB.width} class="tex mx-auto" />
		</a>
		<a href="www.youtube.com">
			<Image src={IG} alt="logo" height={IG.height} width={IG.width} class="tex mx-auto" />
		</a>
		<!-- <a href="https://www.youtube.com/@incrementatuconsulta">
			<Image src={YT} alt="logo" height={YT.height} width={YT.width} class="tex mx-auto" />
		</a> -->
