---
import { AstroFont } from 'astro-font'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<AstroFont
			config={[
				{
					name: 'Bebas Neue',
					src: [
						{
							style: 'normal',
							weight: '400',
							path: './public/fonts/BebasNeue-Regular.ttf'
						}
					],
					preload: true,
					display: 'swap',
					selector: 'h1',
					fallback: 'sans-serif'
				},
				{
					name: 'Montserrat',
					src: [
						{
							style: 'normal',
							path: './public/fonts/Montserrat-VariableFont_wght.ttf'
						}
					],
					preload: true,
					display: 'swap',
					selector: 'body',
					fallback: 'serif'
				},
				{
					name: 'Montserrat Italic',
					src: [
						{
							style: 'italic',
							path: './public/fonts/Montserrat-Italic-VariableFont_wght.ttf'
						}
					],
					preload: true,
					display: 'swap',
					selector: 'h3',
					fallback: 'serif'
				}
			]}
		/>

		<link rel="preload" href="/imagen_inicio.webp" as="image" />
		<link rel="preload" href="/imagen_sesion.webp" as="image" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript
			><iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-TFL5RN5"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe></noscript
		>
		<!-- End Google Tag Manager (noscript) -->
		<slot />
		<script is:inline>
			;(function (w, d, s, l, i) {
				w[l] = w[l] || []
				w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' })
				var f = d.getElementsByTagName(s)[0],
					j = d.createElement(s),
					dl = l != 'dataLayer' ? '&l=' + l : ''
				j.async = true
				j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl
				f.parentNode.insertBefore(j, f)
			})(window, document, 'script', 'dataLayer', 'GTM-TFL5RN5')
		</script>
	</body>
</html>
